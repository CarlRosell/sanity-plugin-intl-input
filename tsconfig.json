{
    "compilerOptions": {
      "module": "esnext",
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "declaration": true,
      "emitDeclarationOnly": true,
      "outDir": "./lib",
      "declarationDir": "./lib",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "allowJs": true,
      "target": "esnext",
      "jsx": "react",
      "rootDir": "./src",
      "lib": [
        "es2017.object",
        "es2017",
        "es2016",
        "es2015",
        "dom"
      ]
    },
    "include": [
      "./src/.d.ts",
      "./src/**/*.ts",
      "./src/**/*.tsx"
    ],
    "exclude": [
      "**/node_modules"
    ]
  }
  