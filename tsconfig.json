{
    "compilerOptions": {
      "module": "esnext",
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "declaration": true,
      "emitDeclarationOnly": true,
      "outDir": "./lib",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "allowJs": true,
      "target": "es5",
      "jsx": "react",
      "lib": [
        "es2017.object",
        "es2017",
        "es2016",
        "es2015",
        "dom"
      ]
    },
    "include": [
      ".d.ts",
        "./src"
    ],
    "exclude": [
      "**/node_modules"
    ]
  }
  